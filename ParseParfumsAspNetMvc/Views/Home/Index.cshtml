@model PagedList.IPagedList<ParseParfumsAspNetMvc.Models.Product>
@using PagedList.Mvc
@{
    ViewBag.Title = "Home Page";
}

<h2>Products</h2>

<p>@Html.ActionLink("Parse", "Parse", null, htmlAttributes: new { @class = "btn btn-default" })</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().PriceOrigin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ImageSrc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.ImageSrc" />
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@if (Model.PageCount > 0)
{
    <p>Page @Model.PageNumber of @Model.PageCount</p>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
}

