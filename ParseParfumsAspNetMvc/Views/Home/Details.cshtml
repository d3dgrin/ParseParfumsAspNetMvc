@model ParseParfumsAspNetMvc.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageSrc" />
    </div>
    <div class="col-md-4">
        <p>@Html.DisplayFor(model => model.Name)</p>
        <p>Price: @Html.DisplayFor(model => model.PriceOrigin)</p>
    </div>
    <div class="col-md-4">
        <p>Price dynamics</p>
        @if(Model.Prices.Count == 0)
        {
            <p>Prices is empty</p>
        }
        <ul>
            @foreach(var item in ViewBag.Prices)
            {
                <li>@item.Date.ToString("dd.MM.yyyy HH:mm:ss") : @item.PriceOrigin</li>
            }
        </ul>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
